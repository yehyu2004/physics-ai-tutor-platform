generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TA
  PROFESSOR
  ADMIN
}

enum QuestionType {
  MC
  NUMERIC
  FREE_RESPONSE
}

enum AssignmentType {
  QUIZ
  FILE_UPLOAD
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  studentId     String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          Role      @default(STUDENT)
  isBanned      Boolean   @default(false)
  isRestricted  Boolean   @default(false)
  isVerified    Boolean   @default(false)
  bannedAt      DateTime?
  isDeleted     Boolean   @default(false)
  deletedAt     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  conversations Conversation[]
  submissions   Submission[]
  gradedSubmissions Submission[] @relation("GradedBy")
  createdAssignments Assignment[] @relation("CreatedBy")
  publishedAssignments Assignment[] @relation("PublishedBy")
  auditLogs     AuditLog[]
  generatedProblemSets ProblemSet[] @relation("GeneratedBy")
  notifications NotificationRead[]
  createdNotifications Notification[] @relation("NotificationCreatedBy")
  examModeToggles ExamMode[] @relation("ExamModeToggledBy")
  gradeAppeals    GradeAppeal[]    @relation("AppealStudent")
  appealMessages  AppealMessage[]  @relation("AppealMessageAuthor")
  activities      UserActivity[]
  createdEmailTemplates  EmailTemplate[]
  createdScheduledEmails ScheduledEmail[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  title     String    @default("New Chat")
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@index([userId, isDeleted, updatedAt])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // "user" or "assistant"
  content        String   @db.Text
  imageUrls      String[] @default([])
  model          String?  // "gpt-5-mini" or "claude-haiku-4.5"
  mode           String?  // "normal" or "socratic"
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

model Course {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  semester    String
  createdAt   DateTime @default(now())

  assignments Assignment[]
}

model Assignment {
  id          String         @id @default(cuid())
  courseId     String?
  title       String
  description String?        @db.Text
  dueDate     DateTime?
  type        AssignmentType
  totalPoints Float          @default(100)
  published        Boolean        @default(false)
  lockAfterSubmit  Boolean        @default(false)
  isDeleted        Boolean        @default(false)
  deletedAt        DateTime?
  createdAt        DateTime       @default(now())
  pdfUrl           String?
  createdById      String
  publishedById    String?
  scheduledPublishAt DateTime?
  notifyOnPublish    Boolean   @default(false)

  course      Course?        @relation(fields: [courseId], references: [id])
  createdBy   User           @relation("CreatedBy", fields: [createdById], references: [id])
  publishedBy User?          @relation("PublishedBy", fields: [publishedById], references: [id])
  questions   AssignmentQuestion[]
  submissions Submission[]
}

model AssignmentQuestion {
  id            String       @id @default(cuid())
  assignmentId  String
  questionText  String       @db.Text
  questionType  QuestionType
  options       Json?        // JSON array for MC options
  correctAnswer String?
  points        Float        @default(10)
  order         Int          @default(0)
  diagram       Json?        // { type: "svg" | "mermaid", content: string }
  imageUrl      String?

  assignment Assignment       @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  answers    SubmissionAnswer[]
  rubrics    Rubric[]
}

model Submission {
  id           String    @id @default(cuid())
  assignmentId String
  userId       String
  fileUrl      String?
  submittedAt  DateTime  @default(now())
  totalScore   Float?
  gradedAt     DateTime?
  gradedById   String?
  isDraft          Boolean   @default(false)
  isDeleted        Boolean   @default(false)
  deletedAt        DateTime?
  overallFeedback  String?   @db.Text

  assignment Assignment         @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  user       User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  gradedBy   User?              @relation("GradedBy", fields: [gradedById], references: [id])
  answers    SubmissionAnswer[]

  @@index([userId, submittedAt])
  @@index([assignmentId])
}

model SubmissionAnswer {
  id           String  @id @default(cuid())
  submissionId String
  questionId   String
  answer           String? @db.Text
  answerImageUrls  Json?   // String[] - up to 3 image URLs attached by student
  score            Float?
  feedback         String? @db.Text
  feedbackImageUrls Json?   // String[] - up to 3 image URLs for feedback
  autoGraded       Boolean @default(false)

  submission Submission         @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  question   AssignmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  appeals    GradeAppeal[]
}

model Rubric {
  id          String @id @default(cuid())
  questionId  String
  description String @db.Text
  points      Float

  question AssignmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model AIConfig {
  id           String   @id @default(cuid())
  provider     String   @default("openai") // "openai" or "anthropic"
  model        String   @default("gpt-5-mini")
  systemPrompt String?  @db.Text
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
}

model ProblemSet {
  id           String   @id @default(cuid())
  topic        String
  difficulty   Int
  questionType String
  createdById  String
  createdAt    DateTime @default(now())

  createdBy User              @relation("GeneratedBy", fields: [createdById], references: [id])
  problems  GeneratedProblem[]
}

model GeneratedProblem {
  id            String  @id @default(cuid())
  problemSetId  String
  questionText  String  @db.Text
  questionType  String
  options       Json?
  correctAnswer String
  solution      String  @db.Text
  points        Float   @default(10)
  diagram       Json?

  problemSet ProblemSet @relation(fields: [problemSetId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // "rate_limit_hit", "content_flag", "abuse_detected", "ban", "unban", "restrict", "unrestrict"
  details   Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model Notification {
  id          String   @id @default(cuid())
  title       String
  message     String   @db.Text
  createdById String
  isGlobal    Boolean  @default(true)
  createdAt   DateTime @default(now())

  createdBy User               @relation("NotificationCreatedBy", fields: [createdById], references: [id])
  reads     NotificationRead[]
}

model NotificationRead {
  id             String   @id @default(cuid())
  notificationId String
  userId         String
  readAt         DateTime @default(now())

  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([notificationId, userId])
}

model ExamMode {
  id          String   @id @default(cuid())
  isActive    Boolean  @default(false)
  message     String?
  toggledById String
  toggledAt   DateTime @default(now())

  toggledBy User @relation("ExamModeToggledBy", fields: [toggledById], references: [id])
}

enum AppealStatus {
  OPEN
  RESOLVED
  REJECTED
}

model GradeAppeal {
  id               String       @id @default(cuid())
  submissionAnswerId String
  studentId        String
  reason           String       @db.Text
  imageUrls        Json?        // String[] - up to 3 image URLs
  status           AppealStatus @default(OPEN)
  isDeleted        Boolean      @default(false)
  deletedAt        DateTime?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  submissionAnswer SubmissionAnswer @relation(fields: [submissionAnswerId], references: [id], onDelete: Cascade)
  student          User             @relation("AppealStudent", fields: [studentId], references: [id])
  messages         AppealMessage[]

  @@unique([submissionAnswerId, studentId])
  @@index([studentId])
}

model AppealMessage {
  id        String   @id @default(cuid())
  appealId  String
  userId    String
  content   String   @db.Text
  imageUrls Json?    // String[] - up to 3 image URLs
  createdAt DateTime @default(now())

  appeal GradeAppeal @relation(fields: [appealId], references: [id], onDelete: Cascade)
  user   User        @relation("AppealMessageAuthor", fields: [userId], references: [id])

  @@index([appealId, createdAt])
}

model UserActivity {
  id         String   @id @default(cuid())
  userId     String
  category   String
  detail     String?
  durationMs Int?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, category, createdAt])
}

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  subject     String
  message     String   @db.Text
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdById String

  createdBy User @relation(fields: [createdById], references: [id])

  @@index([category])
}

enum ScheduledEmailStatus {
  PENDING
  SENT
  CANCELLED
  FAILED
}

model ScheduledEmail {
  id                 String               @id @default(cuid())
  subject            String
  message            String               @db.Text
  recipientIds       String[]
  status             ScheduledEmailStatus @default(PENDING)
  scheduledAt        DateTime
  sentAt             DateTime?
  cancelledAt        DateTime?
  error              String?              @db.Text
  createNotification Boolean              @default(false)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  createdById        String

  createdBy User @relation(fields: [createdById], references: [id])

  @@index([status, scheduledAt])
  @@index([createdById])
}
