generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TA
  ADMIN
}

enum QuestionType {
  MC
  NUMERIC
  FREE_RESPONSE
}

enum AssignmentType {
  QUIZ
  FILE_UPLOAD
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          Role      @default(STUDENT)
  isBanned      Boolean   @default(false)
  isRestricted  Boolean   @default(false)
  bannedAt      DateTime?
  isDeleted     Boolean   @default(false)
  deletedAt     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  conversations Conversation[]
  submissions   Submission[]
  gradedSubmissions Submission[] @relation("GradedBy")
  createdAssignments Assignment[] @relation("CreatedBy")
  auditLogs     AuditLog[]
  generatedProblemSets ProblemSet[] @relation("GeneratedBy")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  title     String    @default("New Chat")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // "user" or "assistant"
  content        String   @db.Text
  imageUrl       String?
  model          String?  // "gpt-5-mini" or "claude-haiku-4.5"
  mode           String?  // "normal" or "socratic"
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model Course {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  semester    String
  createdAt   DateTime @default(now())

  assignments Assignment[]
}

model Assignment {
  id          String         @id @default(cuid())
  courseId     String?
  title       String
  description String?        @db.Text
  dueDate     DateTime?
  type        AssignmentType
  totalPoints Float          @default(100)
  published   Boolean        @default(false)
  createdAt   DateTime       @default(now())
  createdById String

  course      Course?        @relation(fields: [courseId], references: [id])
  createdBy   User           @relation("CreatedBy", fields: [createdById], references: [id])
  questions   AssignmentQuestion[]
  submissions Submission[]
}

model AssignmentQuestion {
  id            String       @id @default(cuid())
  assignmentId  String
  questionText  String       @db.Text
  questionType  QuestionType
  options       Json?        // JSON array for MC options
  correctAnswer String?
  points        Float        @default(10)
  order         Int          @default(0)
  diagram       Json?        // { type: "svg" | "mermaid", content: string }
  imageUrl      String?

  assignment Assignment       @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  answers    SubmissionAnswer[]
  rubrics    Rubric[]
}

model Submission {
  id           String    @id @default(cuid())
  assignmentId String
  userId       String
  fileUrl      String?
  submittedAt  DateTime  @default(now())
  totalScore   Float?
  gradedAt     DateTime?
  gradedById   String?

  assignment Assignment         @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  user       User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  gradedBy   User?              @relation("GradedBy", fields: [gradedById], references: [id])
  answers    SubmissionAnswer[]
}

model SubmissionAnswer {
  id           String  @id @default(cuid())
  submissionId String
  questionId   String
  answer       String? @db.Text
  score        Float?
  feedback     String? @db.Text
  autoGraded   Boolean @default(false)

  submission Submission         @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  question   AssignmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Rubric {
  id          String @id @default(cuid())
  questionId  String
  description String @db.Text
  points      Float

  question AssignmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model AIConfig {
  id           String   @id @default(cuid())
  provider     String   @default("openai") // "openai" or "anthropic"
  model        String   @default("gpt-5-mini")
  systemPrompt String?  @db.Text
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
}

model ProblemSet {
  id           String   @id @default(cuid())
  topic        String
  difficulty   Int
  questionType String
  createdById  String
  createdAt    DateTime @default(now())

  createdBy User              @relation("GeneratedBy", fields: [createdById], references: [id])
  problems  GeneratedProblem[]
}

model GeneratedProblem {
  id            String  @id @default(cuid())
  problemSetId  String
  questionText  String  @db.Text
  questionType  String
  options       Json?
  correctAnswer String
  solution      String  @db.Text
  points        Float   @default(10)
  diagram       Json?

  problemSet ProblemSet @relation(fields: [problemSetId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // "rate_limit_hit", "content_flag", "abuse_detected", "ban", "unban", "restrict", "unrestrict"
  details   Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
